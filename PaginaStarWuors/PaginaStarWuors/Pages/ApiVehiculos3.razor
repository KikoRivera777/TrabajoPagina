@code {
    string searchstring = string.Empty;
    HttpRequestMessage requestMessage;
    HttpResponseMessage responseMessage;
    List<Vehicles> searchVehicles => vehicles.Where(x => x.name.ToUpper().Contains(searchstring.ToUpper())).ToList();
    List<Vehicles> AscVehicles;
    List<Vehicles> DescVehicles;
    List<Vehicles> vehicles;
    int VehicleIndex { get; set; }

    private bool mostrarDefaultVehicles = true;
    private bool mostrarAscVehicles = false;
    private bool mostrarDescVehicles = false;

    protected override async Task OnInitializedAsync()
    {
        vehicles = new List<Vehicles>();

        for (int i = 43; i <= 57; i++)
        {
            requestMessage = new HttpRequestMessage
                {
                    Method = HttpMethod.Get,
                    RequestUri = new Uri($"https://swapi.dev/api/vehicles/{i}")
                };

            responseMessage = await httpClient.SendAsync(requestMessage);

            if (responseMessage.IsSuccessStatusCode)
            {
                var responseString = await responseMessage.Content.ReadAsStringAsync();
                var vehicle = JsonSerializer.Deserialize<Vehicles>(responseString);

                vehicles.Add(vehicle);
            }
        }
    }

    private void MostrarDefaultVehicles()
    {
        mostrarDefaultVehicles = true;
        mostrarAscVehicles = false;
        mostrarDescVehicles = false;
    }

    private void MostrarAscVehicles()
    {
        AscVehicles = vehicles.OrderBy(x => x.name).ToList();
        mostrarDefaultVehicles = false;
        mostrarAscVehicles = true;
        mostrarDescVehicles = false;
    }

    private void MostrarDescVehicles()
    {
        DescVehicles = vehicles.OrderByDescending(x => x.name).ToList();
        mostrarDefaultVehicles = false;
        mostrarAscVehicles = false;
        mostrarDescVehicles = true;
    }

    public class Vehicles
    {
        public string name { get; set; }
        public string url { get; set; }
    }
